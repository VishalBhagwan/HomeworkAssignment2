@model HomeworkAssignment2.Models.Pet
@{
    ViewBag.Title = "Post a Pet for Adoption";
}

<div class="container mt-4">
    <h2 class="mb-4">Post a Pet for Adoption</h2>

    @using (Html.BeginForm("Create", "PostPet", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <!-- Your Details Section -->
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Your Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Your Full Name:</label>
                            <select name="postedByUserId" class="form-select" required>
                                <option value="">Select your name</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.UserId">@user.FirstName @user.LastName</option>
                                }
                            </select>
                            <div class="form-text">Select your name from the registered users list</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pet Details Section -->
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">Pet Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Pet Name:</label>
                            <input type="text" name="Name" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Type:</label>
                            <select name="Type" class="form-select" required>
                                <option value="">Select Type</option>
                                @foreach (var type in ViewBag.Types)
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Breed:</label>
                            <input type="text" name="Breed" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Location:</label>
                            <select name="Location" class="form-select" required>
                                <option value="">Select Location</option>
                                @foreach (var location in ViewBag.Locations)
                                {
                                    <option value="@location">@location</option>
                                }
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Age (years):</label>
                                    <input type="number" name="Age" class="form-control" min="0" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Weight (kg):</label>
                                    <input type="number" name="Weight" class="form-control" min="0" step="0.1" required />
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Gender:</label>
                            <select name="Gender" class="form-select" required>
                                <option value="">Select Gender</option>
                                @foreach (var gender in ViewBag.Genders)
                                {
                                    <option value="@gender">@gender</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Pet Story:</label>
                            <textarea name="PetStory" class="form-control" rows="3" required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Pet Image:</label>
                            <input type="file" name="petImage" class="form-control" accept="image/*" required>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Post Pet for Adoption</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>