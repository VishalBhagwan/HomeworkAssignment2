@model HomeworkAssignment2.Models.Pet
@{
    ViewBag.Title = "Adopt " + Model.Name;
}

<div class="container-fluid px-0">
    <!-- Hero Section -->
    <div class="bg-success text-white py-4">
        <div class="container">
            <div class="text-center">
                <h1 class="display-4 fw-bold mb-2">Adopt @Model.Name</h1>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container mt-4">
        <div class="row">
            <!-- Left Column - Pet Info -->
            <div class="col-lg-6">
                <!-- Pet Image -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center p-0">
                        @if (!string.IsNullOrEmpty(Model.ImageBase64))
                        {
                            <img src="data:image/jpeg;base64,@Model.ImageBase64" class="img-fluid rounded-top" alt="@Model.Name" style="max-height: 400px; width: 100%; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center rounded-top" style="height: 300px;">
                                <div class="text-center text-muted py-5">
                                    <i class="fas fa-paw fa-4x mb-3"></i>
                                    <h5>No Image Available</h5>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Pet Story -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h4 class="text-success fw-bold mb-3">Hi, I'm @Model.Name!</h4>
                        <h6 class="text-muted mb-4">I'm looking for my dream home!</h6>

                        <!-- Pet Quick Details -->
                        <div class="d-flex flex-wrap gap-3 mb-4">
                            <span class="badge bg-light text-dark p-2">
                                <i class="fas fa-map-marker-alt me-1"></i> @Model.Location
                            </span>
                            <span class="badge bg-light text-dark p-2">
                                <i class="fas fa-birthday-cake me-1"></i> Age @Model.Age
                            </span>
                            <span class="badge bg-light text-dark p-2">
                                <i class="fas fa-weight me-1"></i> @Model.Weight kg
                            </span>
                            <span class="badge bg-light text-dark p-2">
                                <i class="fas @(Model.Gender.ToLower() == "male" ? "fa-mars" : "fa-venus") me-1"></i> @Model.Gender
                            </span>
                        </div>

                        <h5 class="text-success fw-bold mt-4 mb-3">My Story</h5>
                        <p class="text-muted lead">@Model.PetStory</p>
                    </div>
                </div>
            </div>

            <!-- Right Column - Adoption Form -->
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-success text-white py-3">
                        <h4 class="card-title mb-0 fw-bold">Your Details</h4>
                    </div>
                    <div class="card-body p-4">
                        @using (Html.BeginForm("Adopt", "Pets", FormMethod.Post, new { id = "adoptionForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="petId" value="@Model.PetId" />

                            <!-- Full Name Dropdown -->
                            <div class="mb-4">
                                <label class="form-label fw-bold text-dark mb-2">Full Name</label>
                                <select name="adoptedByUserId" id="userDropdown" class="form-select form-select-lg border-0 bg-light py-3" required
                                        style="border-radius: 10px; font-size: 1.1rem;">
                                    <option value="" selected disabled>Select your name</option>
                                    @if (ViewBag.Users != null)
                                    {
                                        foreach (var user in ViewBag.Users)
                                        {
                                            <option value="@user.UserId" data-phone="@user.PhoneNumber">
                                                @user.FirstName @user.LastName
                                            </option>
                                        }
                                    }
                                </select>
                                <div class="form-text text-muted mt-1">Please select your name from the list</div>
                            </div>

                            <!-- Phone Number Dropdown -->
                            <div class="mb-4">
                                <label class="form-label fw-bold text-dark mb-2">Phone Number</label>
                                <select name="phoneNumber" id="phoneDropdown" class="form-select form-select-lg border-0 bg-light py-3" required
                                        style="border-radius: 10px; font-size: 1.1rem;">
                                    <option value="" selected disabled>Select your phone number</option>
                                    <!-- Phone numbers will be populated dynamically -->
                                </select>
                                <div class="form-text text-muted mt-1">Your phone number will be used for adoption updates</div>
                            </div>

                            <!-- Adoption Agreement -->
                            <div class="alert alert-light border-0 mt-4 mb-4" style="background-color: #f8f9fa;">
                                <h6 class="alert-heading text-success fw-bold mb-2">Adoption Agreement</h6>
                                <p class="mb-0 text-muted">
                                    By adopting @Model.Name, you agree to provide a loving and caring home.
                                    Thank you for choosing to adopt and give a pet a second chance at happiness!
                                </p>
                            </div>

                            <!-- Submit Button -->
                            <button type="submit" class="btn btn-success btn-lg w-100 py-3 fw-bold mt-3"
                                    style="font-size: 1.2rem; border-radius: 10px;">
                                <i class="fas fa-heart me-2"></i>Adopt Now!
                            </button>
                        }
                    </div>
                </div>

                <!-- Pet Details Card -->
                
            </div>
        </div>
    </div>
</div>

<!-- Inline JavaScript (no section scripts) -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get references to the dropdowns
        var userDropdown = document.getElementById('userDropdown');
        var phoneDropdown = document.getElementById('phoneDropdown');
        var adoptionForm = document.getElementById('adoptionForm');

        // Phone number dropdown functionality
        if (userDropdown && phoneDropdown) {
            userDropdown.addEventListener('change', function() {
                var selectedOption = this.options[this.selectedIndex];
                var phoneNumber = selectedOption.getAttribute('data-phone');

                // Clear previous options
                phoneDropdown.innerHTML = '';

                if (phoneNumber) {
                    // Add the phone number as an option
                    var option = document.createElement('option');
                    option.value = phoneNumber;
                    option.textContent = phoneNumber;
                    option.selected = true;
                    phoneDropdown.appendChild(option);
                } else {
                    var defaultOption = document.createElement('option');
                    defaultOption.value = "";
                    defaultOption.textContent = "Select your phone number";
                    defaultOption.disabled = true;
                    defaultOption.selected = true;
                    phoneDropdown.appendChild(defaultOption);
                }
            });
        }

        // Form submission handling
        if (adoptionForm) {
            adoptionForm.addEventListener('submit', function(e) {
                var userName = userDropdown ? userDropdown.value : '';
                var phoneNumber = phoneDropdown ? phoneDropdown.value : '';

                if (!userName) {
                    e.preventDefault();
                    alert('Please select your name from the list.');
                    return false;
                }

                if (!phoneNumber) {
                    e.preventDefault();
                    alert('Please ensure your phone number is selected.');
                    return false;
                }

                // Optional: Show confirmation dialog
                if (!confirm('Are you sure you want to adopt @Model.Name? This action cannot be undone.')) {
                    e.preventDefault();
                    return false;
                }
            });
        }
    });
</script>

<style>
    .bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
    }

    .card-header.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        border: none;
    }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #218838 0%, #1e9e8a 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
        }

    .card {
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
        }

    .form-select {
        border-radius: 10px !important;
        transition: all 0.3s ease;
    }

        .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
            transform: translateY(-1px);
        }

    .badge.bg-light {
        border: 1px solid #dee2e6;
    }

    .text-muted {
        color: #6c757d !important;
    }

    .text-dark {
        color: #2c3e50 !important;
    }

    .alert-light {
        background-color: #f8f9fa !important;
        border-radius: 10px;
    }

    /* Custom scrollbar for dropdowns */
    .form-select::-webkit-scrollbar {
        width: 8px;
    }

    .form-select::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .form-select::-webkit-scrollbar-thumb {
        background: #28a745;
        border-radius: 10px;
    }

        .form-select::-webkit-scrollbar-thumb:hover {
            background: #218838;
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .container-fluid .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        .card-body {
            padding: 1.5rem;
        }

        .form-select-lg {
            font-size: 1rem !important;
            padding: 12px !important;
        }
    }
</style>