@{
    ViewBag.Title = "Make a Donation";
    decimal progress = ViewBag.ProgressPercentage;
    string progressClass = progress >= 100 ? "bg-success" : "bg-primary";
}

<div class="container mt-4">
    <h2 class="mb-4">Make a Donation</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Donation Progress</h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Goal:</strong> R@(ViewBag.DonationGoal.ToString("N2"))</p>
                    <p class="card-text"><strong>Raised:</strong> R@(ViewBag.TotalDonated.ToString("N2"))</p>

                    <div class="progress mb-3" style="height: 30px;">
                        <div class="progress-bar @progressClass progress-bar-striped"
                             role="progressbar"
                             style="width: @progress%;"
                             aria-valuenow="@progress"
                             aria-valuemin="0"
                             aria-valuemax="100">
                            @progress.ToString("0")%
                        </div>
                    </div>

                    @if (progress >= 100)
                    {
                        <div class="alert alert-success">
                            <strong>🎉 Goal Reached! Thank you for your incredible support! 🎉</strong>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <strong>Only R@((ViewBag.DonationGoal - ViewBag.TotalDonated).ToString("N2")) left to reach our goal!</strong>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Make a Donation</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Donate", "Donation", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">Your Full Name:</label>
                            <select name="donatedByUserId" class="form-select" required>
                                <option value="">Select your name</option>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.UserId">@user.FirstName @user.LastName</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Donation Amount (R):</label>
                            <input type="number" name="amount" class="form-control" min="1" step="0.01" placeholder="Enter amount" required>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100">Make Donation</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>